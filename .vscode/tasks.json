    "version": "2.0.0",
    "tasks": [
        {
            "label": "jekyll serve",
            "type": "shell",
            "command": "bundle exec jekyll serve",
            "options": {
                "env": {
                    "JEKYLL_ENV": "production"
                }
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": [],
            "runOptions": {
                "runOn": "folderOpen"
            }
        }
    ]
}